<Window x:Class="MultithreadingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задания" Height="450" Width="800">
    <Grid>
       
        <Button Name="btnGenerateNumbers" Content="Генерация чисел" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="40" Click="btnGenerateNumbers_Click"/>
        
       
        <Button Name="btnFilterNumbers" Content="Фильтрация чисел" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160,0,0,0" Width="150" Height="40" Click="btnFilterNumbers_Click"/>
        
       
        <Button Name="btnGenerateReport" Content="Генерация отчета" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,0,0,0" Width="150" Height="40" Click="btnGenerateReport_Click"/>

       
        <Button Name="btnStartCasinoGame" Content="Играть в казино" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="480,0,0,0" Width="150" Height="40" Click="btnStartCasinoGame_Click"/>

      
        <TextBox Name="txtOutput" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,50,10,10" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>